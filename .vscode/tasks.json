// https://code.visualstudio.com/docs/editor/tasks
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "HTTP Compile", // 任务名称，与launch.json的preLaunchTask相对应
            "command": "make", // 要使用的编译器
            "args": [
                "all",
                "-j",
                "4"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }

        },
        {
            "label": "Test Compile", // 任务名称，与launch.json的preLaunchTask相对应
            "command": "make", // 要使用的编译器
            "args": [
                "test",
                "-j",
                "4"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }

        }
    ]
}